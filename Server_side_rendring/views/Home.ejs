<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Server Side Rendring</title>
</head>
<body>
    <div>
        <form method="post" action="/url">
            <h1>URL SHORTNER</h1>
            <label>Enter Your URL</label>
            <input placeholder="e.g. http://www.google.com", name="url", type="text"/>
            <button type="submit">Genrate</button>
        </form>
        
    </div>
<div>
    <% if(locals.urls){ %>
        <h1>ShortUrl data</h1>
    <table>
        <thead>
            <th>S.No</th>
            <th>ShortId</th>
            <th>RedirectUrl</th>
            <th>Click</th>
        </thead>
       <tbody>
        <% urls.forEach((url,index) => {
            %>
            <tr>
            <td><%= index+1  %></td>
            <td><%= url.shortId  %></td>
            <td><%= url.redirectURL %></td>
            <td><%= url.visitHistory %></th>
            </tr>
            <%
        }); %>
       </tbody>
    </table>
    <% }%>
   
</div>
</body>
</html>